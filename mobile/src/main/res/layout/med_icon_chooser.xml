<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<GridLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageButton
        android:layout_margin="4dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/image1"
        android:onClick="imageSelected"
        android:src="@drawable/med_icon_1"
        android:background="@drawable/circle_button_grey"
        android:scaleType="fitCenter"
        android:layout_column="0"
        android:layout_row="0" />
    <Button
        android:layout_margin="4dp"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/color1"
        android:onClick="colorSelected"
        android:background="@drawable/circle_button_red"
        android:layout_column="1"
        android:layout_row="0" />

    <ImageButton
        android:layout_margin="4dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/image2"
        android:src="@drawable/med_icon_2"
        android:onClick="imageSelected"
        android:background="@drawable/circle_button_grey"
        android:alpha="0.5"
        android:scaleType="fitCenter"
        android:layout_column="0"
        android:layout_row="1"
        />
    <Button
        android:layout_margin="4dp"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/color2"
        android:onClick="colorSelected"
        android:background="@drawable/circle_button_orange"
        android:alpha="0.3"
        android:layout_column="1"
        android:layout_row="1" />

    <ImageButton
        android:layout_margin="4dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/image3"
        android:onClick="imageSelected"
        android:src="@drawable/med_icon_3"
        android:background="@drawable/circle_button_grey"
        android:alpha="0.5"
        android:scaleType="fitCenter"
        android:layout_column="0"
        android:layout_row="2"
        />
    <Button
        android:layout_margin="4dp"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/color3"
        android:onClick="colorSelected"
        android:background="@drawable/circle_button_lime"
        android:alpha="0.3"
        android:layout_column="1"
        android:layout_row="2" />

    <ImageButton
        android:layout_margin="4dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/image4"
        android:onClick="imageSelected"
        android:src="@drawable/med_icon_4"
        android:background="@drawable/circle_button_grey"
        android:alpha="0.5"
        android:scaleType="fitCenter"
        android:layout_column="0"
        android:layout_row="3"
        />
    <Button
        android:layout_margin="4dp"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/color4"
        android:onClick="colorSelected"
        android:background="@drawable/circle_button_teal"
        android:alpha="0.3"
        android:layout_column="1"
        android:layout_row="3" />
    <Button
        android:layout_margin="4dp"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/color5"
        android:onClick="colorSelected"
        android:background="@drawable/circle_button_lightblue"
        android:alpha="0.3"
        android:layout_column="2"
        android:layout_row="0" />
    <Button
        android:layout_margin="4dp"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/color6"
        android:onClick="colorSelected"
        android:background="@drawable/circle_button_blue"
        android:alpha="0.3"
        android:layout_column="2"
        android:layout_row="1" />

    </GridLayout>
    </ScrollView>
    </RelativeLayout>